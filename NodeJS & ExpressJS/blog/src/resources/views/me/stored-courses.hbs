<script>

    //Lắng nghe Event khi DOM đc tải xong => call mới đc gọi
    document.addEventListener('DOMContentLoaded', () => {
        var courseId;
        //var containerForm = document.forms['container-form'];
        var containerForm = $('form[name="container-form"]'); //jQuery
